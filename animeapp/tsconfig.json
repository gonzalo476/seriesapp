{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["ES6"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "strict": true,
      "target": "ESNext"
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js",
      "__tests__/**/*-test.ts"
    ]
  }
  